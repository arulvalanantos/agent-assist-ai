<!DOCTYPE html>
<html>

<head>
  <base href="/" />
  <title>Omni Assist AI</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="../public/css/styles.css" type="text/css">
  <!-- WebComponents polyfill. Needed for rendering web components in older browsers. -->
  <script src="https://www.gstatic.com/external_hosted/document_register_element/document-register-element.js"></script>
  <!-- Core UI module container. Loads all UI module-specific scripts. -->
  <script src="https://www.gstatic.com/agent-assist-ui-modules/transcript.js"></script>
  <script src="https://www.gstatic.com/agent-assist-ui-modules/v1.11/container.js"></script>

</head>

<body>
  <header class="header">
    <div>
      <img src="../public/assets/logo.svg" alt="Omni Assist AI" height="34px" />
    </div>
    <div>
      <!-- <div class="status-container"></div> -->
      <div class="transcript-container"></div>
      <div class="sentiment-container"></div>
      <div class="toggle-btn-container">
        <button id="summary-toggler" type="button" class="toggle-btn">
          <img src="../public/assets/buttons/summary.svg" alt="Summary" />
        </button>
        <button id="faq-toggler" type="button" class="toggle-btn">
          <img src="../public/assets/buttons/faq.svg" alt="Faq" />
        </button>
        <button id="knowledge-assist-toggler" type="button" class="toggle-btn">
          <img src="../public/assets/buttons/gen-ai.svg" alt="Gen AI Knowledge Assist" />
        </button>
        <button id="smart-reply-toggler" type="button" class="toggle-btn">
          <img src="../public/assets/buttons/smart-reply.svg" alt="Smart Reply" />
        </button>
      </div>
    </div>
  </header>
  <main class="main">
    <section id="summary" class="summary">
      <div class="title-container">
        <h4 class="title">Generate Summary</h4>
        <button type="button" class="close-btn">
          <img src="../public/assets/close.svg" alt="close" />
        </button>
      </div>
    </section>
    <section id="suggestions" class="suggestions">
      <section id="transcript" class="transcript">
        <h4 class="title">Conversation Transcript</h4>
      </section>
      <section id="faq" class="faq">
        <div class="title-container">
          <h4 class="title">FAQ & Article Suggestions</h4>
          <button type="button" class="close-btn">
            <img src="../public/assets/close.svg" alt="close" />
          </button>
        </div>
      </section>
      <section id="knowledge-assist" class="knowledge-assist">
        <div class="title-container">
          <h4 class="title">Gen AI Knowledge Assist</h4>
          <button type="button" class="close-btn">
            <img src="../public/assets/close.svg" alt="close" />
          </button>
        </div>
      </section>
    </section>
    <section id="smart-reply" class="smart-reply">
      <div class="title-container">
        <h4 class="title">Smart Reply</h4>
        <button type="button" class="close-btn">
          <img src="../public/assets/close.svg" alt="close" />
        </button>
      </div>
    </section>
  </main>
  <script>
    window.addEventListener('load', function () {
      function setupToggler(togglerId, targetId) {
        const toggler = document.getElementById(togglerId);
        const target = document.getElementById(targetId);

        toggler.addEventListener('click', function () {
          toggler.classList.toggle('toggle-btn-active');
          target.classList.toggle('show');
        });
      }

      setupToggler('summary-toggler', 'summary');
      setupToggler('faq-toggler', 'faq');
      setupToggler('knowledge-assist-toggler', 'knowledge-assist');
      setupToggler('smart-reply-toggler', 'smart-reply');
    })
  </script>
</body>

</html>